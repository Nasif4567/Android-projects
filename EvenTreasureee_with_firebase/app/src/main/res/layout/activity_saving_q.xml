<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         tools:context=".saving_q"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/logo_of_buget_planner"
            app:srcCompat="@drawable/logo_of_buget_planner" />


    <LinearLayout
        android:id="@+id/sumlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:elevation="16dp"
        android:padding="16dp">


        <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Note* we only accept amount up to 16% to make the scedular for you" />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You already saved : " />


        <TextView
            android:id="@+id/alreadysaved"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0" />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Note* You don't have to input the money you already saved " />











    </LinearLayout>


    <LinearLayout
        android:id="@+id/QLayout"
        android:layout_width="match_parent"
        android:layout_height="369dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:elevation="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Q10head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Question 9"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/Q10"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-medium"
            android:text="How much you want to save in this month ?"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/A10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="RM"
            android:inputType="number" />


        <Button
            android:id="@+id/A10nextbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next" />

        <Button
            android:id="@+id/skipbtn12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I dont want to save any money" />


    </LinearLayout>




    </LinearLayout>